{
  "compilerOptions": {
    // Librairies
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "target": "ES2022",
    // Modules
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // JSX
    "jsx": "react-jsx",
    // Interopérabilité
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // Émission
    "noEmit": true,
    "incremental": true,
    // Vérifications strictes (TOUTES ACTIVÉES)
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    // Vérifications supplémentaires de qualité
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    // Performance
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // Plugins
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Alias de chemins
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/data/*": [
        "./src/data/*"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ],
      "@/types/*": [
        "./src/types/*"
      ],
      "@/hooks/*": [
        "./src/hooks/*"
      ],
      "@/styles/*": [
        "./src/styles/*"
      ]
    },
    // Base URL
    "baseUrl": "."
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "prisma"
  ]
}
